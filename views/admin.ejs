<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Dashboard - Feedback Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-white">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard - Feedback Management</h1>
    <h2 class="text-center mb-4">Feedbacks</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Subject</th>
          <th>Message</th>
          <th>User</th>
          <th>Time</th>
          <th>Action</th> 
        </tr>
      </thead>
      <tbody>
        <% feedbacks.forEach(f => { %>
          <tr>
            <td><%= f.subject %></td>
            <td><%= f.message %></td>
            <td><%= f.user %></td>
            <td><%= new Date(f.timestamp._seconds * 1000).toLocaleString() %></td>
            <td>
            
              <form action="/delete-feedback" method="POST" style="display: inline-block;">
                <input type="hidden" name="feedbackId" value="<%= f.id %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <form action="/logout" method="POST" class="text-center">
      <button class="btn btn-danger">Logout</button>
    </form>
  </div>
</body>
</html>
